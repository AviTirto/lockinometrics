rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Sessions collection - allow anyone to read and write
    // (since this is a personal app without auth)
    match /sessions/{sessionId} {
      allow read: if true;
      allow create: if true;
      allow update: if request.auth != null || true; // Allow updates
      allow delete: if request.auth != null || true; // Allow deletes
    }
  }
}
